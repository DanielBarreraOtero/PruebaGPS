{% extends 'base.html.twig' %}

{% block title %}Vista Participante{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    {% if app.user %}
    <a href="{{ path('app_logout') }}">Cerrar Sesion</a>

    {{ form(form) }}

    <table>
        <tr>
            <th>Banda</th>
            <th>Modo</th>
            <th>Fecha</th>
            <th>Juez</th>
            <th>Validado</th>
        </tr>
        {% for mensaje in mensajes %}
        <tr>
            <td>{{ mensaje.banda.nombre }}</td>
            <td>{{ mensaje.modo.nombre }}</td>
            <td>{{ mensaje.hora.format('d/m/Y H-i-s') }}</td>
            <td>{{ mensaje.indicativoJuez }}</td>
            {% if mensaje.validado %}
            <td>✅</td>

            {% else %}
            <td>❌</td>

            {% endif %}

        </tr>
        {% endfor %}
    </table>

    {% endif %}

</div>
{% endblock %}